specify("A record expression") with
    it should("evaluate the fields left to right") with
        var e = ""
        var rec = z: (e = e + "1"), x: (e = e + "2"), y: (e = e + "3")
        e shouldEqual("123")
    end

    it should("define fields on the object") with
        var rec = x: 1, y: 2
        // Have to pattern match to get them out.
        var x: x, y: y = rec
        x shouldEqual(1)
        y shouldEqual(2)
    end
end