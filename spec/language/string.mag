specify("A string literal") with
    it should("be delimited by double quotes") with
        "some string" shouldEqual("some string")
    end

    it should("allow backslash-prefixed escape sequences") with
        "(\")" call(1) shouldEqual("\"")
        "(\\)" call(1) shouldEqual("\\")
        "(\n)" call(1) shouldEqual("\n")
    end
end
