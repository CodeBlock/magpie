// A simple class that is callable and tracks when it was called.
class TestCallable
    shared def new(returnValue -> TestCallable)
        signify(returnValue: returnValue)
    end
    
    def call(arg)
        this arg = arg
        called = true
        returnValue
    end
    
    var arg         Dynamic = nothing
    var returnValue Dynamic
    var called      Bool    = false
end
