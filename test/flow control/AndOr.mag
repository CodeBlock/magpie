var truthy(-> Bool)
    print("true")
    true
end

var falsy(-> Bool)
    print("false")
    false
end

// Make sure expressions short-circuit.
print(truthy() and truthy()) //: true
                             //: true
                             //: true
print(truthy() and falsy())  //: true
                             //: false
                             //: false
print(falsy() and truthy())  //: false
                             //: false
print(falsy() and falsy())   //: false
                             //: false

print(truthy() or truthy())  //: true
                             //: true
print(truthy() or falsy())   //: true
                             //: true
print(falsy() or truthy())   //: false
                             //: true
                             //: true
print(falsy() or falsy())    //: false
                             //: false
                             //: false

// Returns the result expression of the side that affected the result.
// Note that this presumes non-zero ints and non-empty strings are truthy.
print(0 and "") //: 0
print(0 and 1) //: 0
print(1 and 0) //: 0
print(1 and 2) //: 2

print("" or 0) //: 0
print(0 or "a") //: a
print(1 or 0) //: 1
print(1 or 2) //: 1