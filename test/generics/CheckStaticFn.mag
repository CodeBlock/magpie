// create a static function
var f = { A : fn(arg A) print(arg) }

var main(->)
    // the function should be strongly-typed
    var expectInt = [ f : Int ]
    expectInt(123)
    expectInt("hi") //!
    expectInt(true) //!

    var expectBool = [ f : Bool ]
    expectBool(123)  //!
    expectBool("hi") //!
    expectBool(true)

    var intOrBool = [ f : Bool | Int ]
    intOrBool(123)
    intOrBool("hi") //!
    intOrBool(true)
end