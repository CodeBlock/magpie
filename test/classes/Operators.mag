extend Int
    ^ (exponent Int -> Int)
        var i       = 0
        var result  = 1
    
        while i < exponent do
            result = result * this
            i = i + 1
        end
    
        result
    end
end

var a = 3 ^ 0
print a.toString //: 1

var b = 2 ^ 1
print b.toString //: 2

var c = 3 ^ 3
print c.toString //: 27
    
var d = 2 ^ 2 ^ 3
print d.toString //: 64

var e = 2 ^ (2 ^ 3)
print e.toString //: 256
