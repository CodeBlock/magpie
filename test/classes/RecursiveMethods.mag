class Foo
    // self recursion
    fib (n Int -> Int)
        if n < 2 then n else fib (n - 1) + fib (n - 2)
    end
    
    // mutual recursion
    odd? (n Int -> Bool)
        if n == 0 then false else even? (n - 1)
    end

    even? (n Int -> Bool)
        if n == 0 then true else odd? (n - 1)
    end
end

var foo = Foo.new
print (foo.fib 10).toString //: 55

print (foo.odd? 9).toString //: true
print (foo.odd? 10).toString //: false
print (foo.even? 9).toString //: false
print (foo.even? 10).toString //: true
