val a is Num = 1
print(a) // expect: 1

// Can use an expression for the value.
val d is String = "str"
print(d) // expect: str

// Don't actually need to name a variable.
print(val is Num = 1) // expect: 1

// Failed value pattern match.
do
    val e is Bool = 2
catch err then
    print("caught") // expect: caught
end
