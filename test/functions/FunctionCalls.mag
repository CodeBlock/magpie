def noArgs  ()                    print "noArgs"
def oneArg  (a String)            print ("one " + a)
def twoArgs (a String, b String)  print ("two " + a + b)
def bounce  (a String -> String)  a + " returned"

// explicit () application is required
noArgs () //: noArgs

// regular application
oneArg "one" //: one one

// chained
oneArg bounce "chain" //: one chain returned

// tupled arguments
twoArgs ("a ", "b") //: two a b

// stored tuple
def args = ("a ", "b")
twoArgs args //: two a b
