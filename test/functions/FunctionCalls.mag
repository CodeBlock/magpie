var noArgs  ()                    print "noArgs"
var oneArg  (a String)            print ("one " + a)
var twoArgs (a String, b String)  print ("two " + a + b)
var bounce  (a String -> String)  a + " returned"

// explicit () application is required
noArgs () //: noArgs

// regular application
oneArg "one" //: one one

// chained
oneArg bounce "chain" //: one chain returned

// tupled arguments
twoArgs ("a ", "b") //: two a b

// stored tuple
var args = ("a ", "b")
twoArgs args //: two a b
