// Literals.
print(typeof nothing) //: Nothing
print(typeof true) //: Bool
print(typeof 123) //: Int
print(typeof "i") //: String

// Assignment.
print(typeof a = 3)       //: Int
print(typeof foo = "bar") //: String

// Blocks.
print(typeof
    123
end)        //: Int

print(typeof
    123
    true
end)        //: Bool


print(typeof
    123
    true
    "hey"
end)        //: String

// Loops never return anything.
print(typeof while a < 2 do 4) //: Nothing

// Variable definitions.
print(typeof var a = 234) //: Int
print(typeof var a = true) //: Bool

// Return expressions never actually evaluate to a result since they
// immediately unwind the stack.
print(typeof return 123) //: Never