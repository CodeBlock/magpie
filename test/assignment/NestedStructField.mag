// expected: 3
// expected: 4
// expected: 2
// expected: -2
// expected: 3

Inc (a Int -> Int) a + 1

Add<- (box IntBox, a Int, b Int ->) box.Value <- (a + b)

Main (->)
    def a <- Box2 IntBox 3
    Print a.Box.Value.String
    
    // unsugared assignment
    Value<- (a.Box, 4)
    Print a.Box.Value.String
    
    // sugared assignment
    a.Box.Value <- 2
    Print a.Box.Value.String
    
    // works with self-assignment operators too
    a.Box.Value <- .Neg
    Print a.Box.Value.String
    
    a.Box.Value <- + 5
    Print a.Box.Value.String
end

struct Box2
    mutable Box IntBox
end

struct IntBox
    mutable Value Int
end
