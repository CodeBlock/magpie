// Comparisons.
def shared String equal?(left String, right String)
    left compareTo(right) == 0
end

def shared String lessThan?(left String, right String)
    left compareTo(right) < 0
end

def shared String join(elements, separator String)
    var knownSeparator = separator or ", "
    var result = ""
    for element = elements do
        if result != "" then result = result ~ knownSeparator
        result = result ~ element
    end
    result
end
