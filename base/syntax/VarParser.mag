// Keyword parser for "var" expressions.
class VarParser
    def parse(parser MagpieParser -> Expression)
        parser consume("var")
        %var%("pattern", parser parsePattern())
        parser consume(TokenType equals)
        %var%("value", parser parseEndBlock())

        VariableExpression new(pattern: pattern, value: value)
    end
end

MagpieParser registerParseword("var", VarParser new())
